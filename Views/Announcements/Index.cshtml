                // });
            });

            $(".view-comments").on('click', '.view-comments', function (e) {
                e.preventDefault();
                const announcementId = $(this).data('announcement-id');
                const commentsSection = $('#comments-' + announcementId);

                commentsSection.toggle();

                if (commentsSection.is(':visible')) {
                    // Load comments via Ajax
                    var GetCommentsUrl = '@Url.Action("GetComments", "Announcements")';
                    $.get(GetCommentsUrl /* '/Announcements/GetComments' */, { announcementId: announcementId }, function (data) {
                        commentsSection.html(data);
                    }).fail(function (jqXHR, textStatus, errorThrown) {
                        console.error("Error loading comments: " + textStatus, errorThrown);
                    });
                }
            });
        });
    </script>
</body>
</html>
